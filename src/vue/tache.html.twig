{% extends "base.html.twig" %}

{% block title %} {{ parent() }} - Gestion des taches {% endblock %}
       
{% block contenu %} <h1> Gestion des tâches des différents projets </h1> 

{% if form.valide is defined %} 
    {% if form.valide == true %}
       <h1 class="h3 mb-3 font-weight-normal">{{ form.message }}</h1>
       {% else %}  
       <h1 class="alert alert-danger" role="alert">{{ form.message }}</h1> 
    {% endif %}         
{% endif %}         
    
<div class="panel">
  <!-- Default panel contents -->
  <!-- Table -->
  <div class="panel-heading background-violet">Liste des tâches - <a href="index.php?page=tacheajout" class="blanc">Ajouter une tache</a></div>
  <div class="table-responsive">
  <table class="table table-hover table-striped">
      <tr><th>Libellé</th><th>Coût</th><th>Nombre d'heures</th><th>Développeur assigné</th><th>Projet correspondant</th><th>Modifier</th><th>Supprimer</th></tr>
   {% for e in liste %}
          <tr><td>{{e.libelle}}</td><td>{{e.cout}}</td><td>{{e.horaire}}</td><td>{{e.idDev}}</td><td>{{e.libelleProjet}}</td><td><div class="btn-group btn-group-lg"><a href="index.php?page=tachemodif&id={{e.code}}"><span class="glyphicon glyphicon-pencil violet" aria-hidden="true"></span></a></div></td><td><div class="btn-group btn-group-lg"><a href="index.php?page=tache&id={{e.code}}"><span class="glyphicon glyphicon-trash violet" aria-hidden="true"></span></a></div></td></tr> 
   {% endfor %}   
  </table>
  </div>
  
  
</div>

{% endblock %} 


