{% extends "base.html.twig" %}

{% block title %} {{ parent() }} - Membres de l'équipe{% endblock %}
       
{% block contenu %} <h1> Membres de l'équipe {{ nomEquipe }} </h1> 

{% if form.valide is defined %} 
    {% if form.valide == true %}
       <h1 class="h3 mb-3 font-weight-normal">{{ form.message }}</h1>
       {% else %}  
       <h1 class="alert alert-danger" role="alert">{{ form.message }}</h1> 
    {% endif %}         
{% endif %}         
    
<div class="panel">
  <!-- Default panel contents -->
  <div class="panel-heading background-violet">Liste des membres - <a href="index.php?page=participationajout&idEquipe={{unIdEquipe}}" class="blanc">Ajouter un membre</a></div>

  <!-- Table -->
  <div class="table-responsive">
  <table class="table table-hover table-striped">
      <tr><th>Membre</th><th></th></tr>
   {% for e in liste %}
          <tr><td>{{e.idDev}}</td><td><div class="btn-group btn-group-lg"><a href="index.php?page=participation&idDev={{e.idDev}}&idEquipe={{e.idEquipe}}"><span class="glyphicon glyphicon-trash violet" aria-hidden="true"></span></a></div></td></tr> 
   {% endfor %}    
  </table>
  </div>
</div>

{% endblock %}